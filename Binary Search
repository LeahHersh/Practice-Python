
#Under binarySearch.py in Atom. "answer"= item being looked for on a list

def binarySearch(list, answer):

    first=0
    last=len(list)-1

    while last!=list[a]:
        a=(last+first)/2

        if(answer==list[a]):
            print("The item is at "+list[a])

        elif(answer<list[a]):
            last=last-a

        elif(answer>list[a]):
            first=first+a

        else:
            print("Couldn't find it.")
