
#Lists possible solutions for scytales
#Sample input: "Tstnhetoecitrrmreeeeatdvrsoeeteanhsloa"

cipher=input("Unwrap scytale and list all its letters in order here: ")
start=0 #first letter of the cipher read
skip=3 #Number of letters skipped between outputs
round=0 #Number of times letters are skipped

print("")

def decipher(): #Print the correct letter and move forward "skip" spaces

    while(start+(skip*round)<=(len(cipher)-1)-skip):
        global round
        global start
        global skip
        print(cipher[start+skip*round]),
        round=round+1



    while(start+1<skip): #While on the same round of a skip
        global round
        global start
        global skip

        if(start+(skip*round)>(len(cipher)-1)-skip):
            global round
            global start
            print(cipher[start+skip*round])
            #print("reached")
            round=0
            start=start+1
            decipher()

decipher()


while(start+1==skip and skip<(len(cipher)/3)):
    global round
    global skip
    global start
    print(cipher[start+skip*round])
    print("")
    print("Or:")
    print("")
    skip=skip+1
    round=0
    start=0
    decipher()
